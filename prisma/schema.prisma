generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id                Int         @default(autoincrement()) @id
  email             String      @unique
  password          String
  role              UserRole    @default(USER)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([id, email])
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}
